<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mortar.cannon"
    android:versionCode="11"
    android:versionName="1.1.1" >

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="org.mortar.common.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"        
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.mortar.cannon.activities.NumbersActivity"
            android:label="@string/title_activity_number_list" >
        </activity>
        <activity
            android:name="org.mortar.cannon.activities.ConfigActivity"
            android:label="@string/title_activity_config" >
        </activity>
        <activity
            android:name="org.mortar.cannon.activities.ServerActivity"
            android:label="@string/title_activity_server" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>